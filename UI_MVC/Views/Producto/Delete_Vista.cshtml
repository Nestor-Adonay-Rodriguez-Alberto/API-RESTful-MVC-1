@model Transferencia_Datos.Producto_DTO.ObtenerPorID_Producto_DTO

@{
    ViewData["Title"] = "ELIMINAR";
}

<h1>Eliminar</h1>

<div>
    <h4>Datos:</h4>
    <hr />

    <!-- Fila #1 -->
    <div class="row">

        <div class="col-sm-3">
            <dt>NOMBRE:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
        </div>

        <div class="col-sm-3">
            <dt>CATEGORIA:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Categoria)
            </dd>
        </div>

    </div>

    <!-- Fila #1 -->
    <div class="row">

        <div class="col-sm-4">
            <dt>PRECIO:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Precio)
            </dd>
        </div>

    </div>


    <!-- BOTONES -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProducto" />
        <input type="submit" value="ELIMINAR" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">CANCELAR</a>
    </form>

</div>
