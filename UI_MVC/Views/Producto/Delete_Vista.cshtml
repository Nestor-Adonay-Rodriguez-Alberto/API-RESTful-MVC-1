@model Transferencia_Datos.Producto_DTO.ObtenerPorID_Producto_DTO

@{
    ViewData["Title"] = "ELIMINAR";
}

<style>
    /* Estilos personalizados */
    .form-container {
        max-width: 550px;
        padding: 20px;
        background-color: #f7f7f7;
        border-radius: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        margin-top: 20px;
    }

        .form-container h1 {
            text-align: center;
            font-size: 28px;
            font-weight: bold;
            color: #333;
            text-transform: uppercase;
        }

        .form-container .row {
            margin-bottom: 10px;
        }

        .form-container label {
            font-weight: bold;
        }

</style>

<div class="form-container">
    <h1>Eliminar</h1>

    <div>
        <h5>Datos Del Producto</h5>
        <hr />

        <!-- Fila #1 -->
        <div class="row">

            <div class="col-sm-6">
                <dt>NOMBRE:</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
            </div>

            <div class="col-sm-6">
                <dt>CATEGORIA:</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Categoria)
                </dd>
            </div>

        </div>

        <!-- Fila #2 -->
        <div class="row">

            <div class="col-sm-6">
                <dt>PRECIO:</dt>
                <dd class="col-sm-10">
                    @Model.Precio.ToString("C")
                </dd>
            </div>

        </div>

    </div>

    <!-- BOTONES -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProducto" />
        <input type="submit" value="ELIMINAR" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">CANCELAR</a>
    </form>

</div>