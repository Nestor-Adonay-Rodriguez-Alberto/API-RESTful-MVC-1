@model Transferencia_Datos.Producto_DTO.ObtenerPorID_Producto_DTO

@{
    ViewData["Title"] = "DETALLE";
}

<h1>Detalle</h1>

<div>
    <h4>Datos:</h4>
    <hr />

    <!-- Fila #1 -->
    <div class="row">

        <div class="col-sm-3">
            <dt>NOMBRE:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
        </div>

        <div class="col-sm-3">
            <dt>CATEGORIA:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Categoria)
            </dd>
        </div>

    </div>

    <!-- Fila #1 -->
    <div class="row">

        <div class="col-sm-4">
            <dt>PRECIO:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Precio)
            </dd>
        </div>

    </div>


    <!-- BOTONES -->
    <div>
        <a asp-action="Edit" asp-route-id="@Model.IdProducto" class="btn btn-primary">EDITAR</a> |
        <a asp-action="Index" class="btn btn-secondary">CANCELAR</a>
    </div>

</div>

